<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="main w-full min-h-screen bg-william-950">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-5 py-2 rounded-md w-80 bg-william-100 text-william-950" type="text" name="title" id="" placeholder="Title">
                <textarea class="block px-5 py-2 resize-none mt-2 mb-2 w-80 rounded-md bg-william-100 text-william-950" name="task" id="" placeholder="Write your task..."></textarea>
                <input type="submit" value="New Task" class="w-80 bg-william-600 rounded-md text-william-100">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <%if(files.length>0){%>
                <% files.forEach((val)=>{%>
                    <div class="task w-72 px-3 py-4 bg-william-200 rounded-md text-william-950">
                        <h1 class="text-2xl font-medium"><%= val%></h1>
                        <div class="flex justify-between w-full">
                            <a href="/file/<%= val %>" class="text-william-700">Read More...</a>
                            <a class="text-william-500" href="/edit/<%= val %>">edit file name</a>
                        </div>
                    </div>
                    <%})%>
                <%} else {%>
                    <h3 class="text-zinc-500">No task</h3>
            <%}%>
            
        </div>
    </div>
</body>
</html>